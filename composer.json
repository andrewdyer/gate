{
    "name": "andrewdyer/gate",
    "description": "Check if a user is authorized to perform a given action",
    "keywords": [
        "php",
        "gate",
        "authorization",
        "permissions"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Andrew Dyer",
            "email": "andrewdyer@outlook.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Anddye\\Gate\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Anddye\\Gate\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "^7.2.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "symfony/var-dumper": "^5.0",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "scripts": {
        "cs": [
            "vendor/bin/php-cs-fixer fix"
        ]
    }
}
